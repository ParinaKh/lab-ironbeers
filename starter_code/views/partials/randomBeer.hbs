<div class="one-random-beer">
    <div>
        <img class="image-one-beer" src="{{this.image_url}}" alt="">
    </div>
    <div class="description-one-random">
        <h1 class="title">{{this.name}}</h1>
        <h2 class="tagline">{{this.tagline}}</h2>
        <p class="description">
            {{this.description}}
        </p>
        <h3>Food Pairing</h3>
        <p>
            <ul>
                {{#each this.food_pairing}}
                <li>{{this}}</li>
                {{/each}}
            </ul>
        </p>
        <p>Brewers tips : {{this.brewers_tips}}</p>
    </div>
</div>